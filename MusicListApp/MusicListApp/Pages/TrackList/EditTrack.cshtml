@page
@model MusicListApp.Pages.TrackList.EditTrackModel

<br />
<h2 class="text-info">Edit Track</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="Track.ID"/>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Track.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Track.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Track.Composers"></label>
            </div>
            <div class="col-6">
                <input asp-for="Track.Composers" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Track.Singers"></label>
            </div>
            <div class="col-6">
                <input asp-for="Track.Singers" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Track.Lyricists"></label>
            </div>
            <div class="col-6">
                <input asp-for="Track.Lyricists" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Track.Year"></label>
            </div>
            <div class="col-6">
                <input asp-for="Track.Year" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Update" class="btn btn-primary form-control " />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control ">Back to List </a>
            </div>
        </div>

    </form>


</div>

@{
}

